# SpaarApp Environment Configuration
# Copy this file to .env.local for development

# Application Settings
APP_NAME=SpaarApp
APP_VERSION=0.1.0
APP_ENVIRONMENT=development
APP_DEBUG=true
APP_LOG_LEVEL=debug

# Security Settings
DATABASE_ENCRYPTION_KEY=your-encryption-key-here
JWT_SECRET=your-jwt-secret-here
SESSION_SECRET=your-session-secret-here

# Claude AI Configuration
ANTHROPIC_API_KEY=your-anthropic-api-key-here
OPENAI_API_KEY=your-openai-api-key-here
CLAUDE_MODEL=claude-3-5-sonnet-20241022
CLAUDE_MAX_TOKENS=4096
CLAUDE_TEMPERATURE=0.7

# Cost Management
CLAUDE_MONTHLY_BUDGET_EUR=10.00
COST_ALERT_ENABLED=true
COST_TRACKING_ENABLED=true

# Database Configuration
DATABASE_URL=sqlite:./data/spaarapp.db
DATABASE_ENCRYPTION_ENABLED=true
DATABASE_BACKUP_ENABLED=true
DATABASE_BACKUP_INTERVAL_HOURS=24

# Rabobank Integration
RABOBANK_API_ENABLED=false
RABOBANK_API_KEY=your-rabobank-api-key-here
RABOBANK_SANDBOX_MODE=true

# File Storage
DATA_DIRECTORY=./data
EXPORT_DIRECTORY=./exports
BACKUP_DIRECTORY=./backups
UPLOAD_MAX_SIZE_MB=10

# Development Server
VITE_DEV_SERVER_HOST=localhost
VITE_DEV_SERVER_PORT=1420
VITE_API_BASE_URL=http://localhost:3000

# Tauri Configuration
TAURI_BUNDLE_IDENTIFIER=nl.spaarapp.app
TAURI_BUNDLE_VERSION=0.1.0
TAURI_WINDOW_WIDTH=1200
TAURI_WINDOW_HEIGHT=800

# Feature Flags
FEATURE_AI_INSIGHTS=true
FEATURE_BANK_IMPORT=true
FEATURE_BUDGET_ANALYSIS=true
FEATURE_REPORT_EXPORT=true
FEATURE_AUTO_BACKUP=true
FEATURE_ACCESSIBILITY_MODE=true

# Accessibility Settings
DEFAULT_HIGH_CONTRAST=false
DEFAULT_LARGE_TEXT=false
DEFAULT_REDUCED_MOTION=false
DEFAULT_SCREEN_READER_SUPPORT=true

# Analytics and Monitoring
ANALYTICS_ENABLED=false
SENTRY_DSN=your-sentry-dsn-here
LOGGING_ENABLED=true
LOG_RETENTION_DAYS=30

# Performance Settings
CACHE_ENABLED=true
CACHE_TTL_SECONDS=3600
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT_SECONDS=30

# Dutch Localization
DEFAULT_LANGUAGE=nl-NL
DEFAULT_CURRENCY=EUR
DEFAULT_TIMEZONE=Europe/Amsterdam
DATE_FORMAT=DD-MM-YYYY
NUMBER_FORMAT=decimal

# Development Tools
HOT_RELOAD_ENABLED=true
DEBUG_CONSOLE_ENABLED=true
PERFORMANCE_MONITORING=true
ERROR_REPORTING=true

# Testing Configuration
TEST_DATABASE_URL=sqlite:./test-data/spaarapp-test.db
TEST_MODE_ENABLED=false
MOCK_BANK_DATA=true
MOCK_CLAUDE_RESPONSES=true