{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "SpaarApp",
  "version": "0.1.0",
  "identifier": "nl.spaarapp.spaarapp",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev:vite",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173"
  },
  "app": {
    "windows": [
      {
        "title": "SpaarApp - ADHD-Friendly Financial Management",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "decorations": true,
        "alwaysOnTop": false,
        "skipTaskbar": false,
        "theme": "Light"
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src: 'self'; connect-src 'self' https://api.anthropic.com ws: wss:;"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "category": "Finance",
    "shortDescription": "ADHD-friendly financial management for Dutch users",
    "longDescription": "SpaarApp is a comprehensive financial management application designed specifically for users with ADHD, featuring simplified interfaces, smart categorization, and AI-powered insights.",
    "icon": ["icons/icon.ico"],
    "resources": [],
    "externalBin": [],
    "copyright": "Â© 2024 SpaarApp Team",
    "license": "MIT",
    "licenseFile": "../LICENSE",
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "wix": {
        "language": ["en-US", "nl-NL"]
      }
    }
  },
  "plugins": {
    "updater": {
      "active": false,
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDFFQkE5QjZCMTU5QkUyQ0YKUldSWkRGRlJYWWNLdHhPZ1hxb0ozbUkzZkhaNEVjNHhEcVhYbDZ4Y3NDS21kT0VnbnFhNEpJWlZkVjUK"
    },
    "shell": {
      "open": true,
      "scope": []
    },
    "dialog": {
      "open": true,
      "save": true,
      "message": true,
      "ask": true,
      "confirm": true
    },
    "fs": {
      "all": true,
      "readFile": true,
      "writeFile": true,
      "readDir": true,
      "copyFile": true,
      "createDir": true,
      "removeDir": true,
      "removeFile": true,
      "renameFile": true,
      "exists": true,
      "scope": ["$APPDATA/*", "$DOCUMENT/*", "$DOWNLOAD/*", "$HOME/*"]
    }
  }
}
