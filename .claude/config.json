{
  "version": "1.0",
  "project": {
    "name": "SpaarApp",
    "type": "tauri-application",
    "description": "ADHD-friendly financial management application for Dutch users",
    "tech_stack": {
      "frontend": "React + TypeScript + Material-UI",
      "backend": "Rust (Tauri) + Python",
      "database": "SQLite with SQLCipher",
      "ai": "Claude Sonnet 4.5 + OpenAI GPT-4.1",
      "sdk": "claude-agent-sdk"
    }
  },
  "preferences": {
    "codeStyle": "rustfmt + prettier",
    "testFramework": "jest + cargo test",
    "buildTool": "tauri + vite",
    "language": "nl-NL",
    "security": "financial-grade"
  },
  "agents": {
    "frontend": {
      "specialization": "react/typescript/material-ui",
      "tools": ["eslint", "prettier", "accessibility-testing"],
      "adhd_focus": true
    },
    "backend": {
      "specialization": "rust/tauri/financial-services",
      "tools": ["clippy", "rustfmt", "security-audit"],
