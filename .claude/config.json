    },
    "financial": {
      "specialization": "fintech/gdpr/rabobank",
      "tools": ["security-scan", "data-validation", "compliance-check"],
      "permissions": "financial-data-access"
    },
    "ai": {
      "specialization": "claude-sdk/financial-analysis",
      "tools": ["anthropic-sdk", "openai-sdk", "data-processing"],
      "cost_management": true
    }
  },
  "skills": [
    "tauri-development",
    "react-typescript",
    "financial-data-processing",
    "accessibility-compliance",
    "gdpr-compliance",
    "dutch-banking-integration",
    "adhd-ux-design",
    "security-auditing",
    "claude-sdk-integration"
  ],
  "security": {
    "data_encryption": "SQLCipher",
    "api_keys": "env-protected",
    "financial_data": "zero-knowledge",
    "gdpr_compliant": true,
    "permissions": "role-based"
  },
  "development": {
    "workspace": "spaarapp",
    "hot_reload": true,
    "debug_mode": true,
    "cost_tracking": {
      "claude_api": true,
      "budget_alerts": true,
      "monthly_limit": "â‚¬10.00"
    }
  },
  "custom_commands": {
    "spaarapp:dev": "Start development server with hot reload",
    "spaarapp:build": "Build production application",
    "spaarapp:test": "Run all tests including accessibility",
    "spaarapp:security": "Run security audit and compliance checks",
    "spaarapp:deploy": "Build and package for distribution"
  },
  "integrations": {
    "claude_sdk": {
      "enabled": true,
      "permissions": ["financial-analysis", "data-processing", "report-generation"],
      "tools": ["spaarapp-financial-tools", "rabobank-import", "budget-calculator"]
    }
  }
